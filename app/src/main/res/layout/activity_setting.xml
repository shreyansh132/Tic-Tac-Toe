<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBrown"
    tools:context=".SettingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/relativeLayout">
                <com.github.florent37.shapeofview.shapes.DiagonalView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:elevation="4dp"
                    app:shape_diagonal_angle="8"
                    app:shape_diagonal_direction="left"
                    app:shape_diagonal_position="bottom">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorDarkBlue">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shreyansh Jain"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:id="@+id/name"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/size_100dp"
                            android:layout_marginStart="@dimen/size_20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="shreyanshj132@gmail.com"
                            android:layout_below="@+id/name"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.DiagonalView>

                <com.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_100dp"
                    android:elevation="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/size_20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar1"/>
                </com.github.florent37.shapeofview.shapes.CircleView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout"
                android:layout_marginTop="@dimen/size_40dp"
                android:id="@+id/linearLayout"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Game Sound"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_18sp">

                    </TextView>
                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turn Game Sound On/Off"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textsize_14sp"
                        android:id="@+id/gameSound"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:background="@color/colorGray"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/size_10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Game Sound"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_18sp">

                    </TextView>
                    <Switch

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turn Game Sound On/Off"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textsize_14sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:background="@color/colorGray"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/size_10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Game Sound"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_18sp">

                    </TextView>
                    <Switch

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turn Game Sound On/Off"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textsize_14sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:background="@color/colorGray"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/size_10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Game Sound"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_18sp">

                    </TextView>
                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turn Game Sound On/Off"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textsize_14sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:background="@color/colorGray"></View>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:background="@drawable/custom_ripple_effect_1"
                android:text="Logout Shreyansh"
                android:textAllCaps="false"
                android:layout_below="@+id/linearLayout"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/size_50dp"
                android:textSize="@dimen/textsize_18sp"
                android:id="@+id/dashboard_local_play_button"/>
        </LinearLayout>
</ScrollView>