<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp"
    android:padding="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_15dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:scaleType="fitXY"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/result_animation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_10dp"
            android:textSize="@dimen/textsize_20sp"
            android:gravity="center"
            android:textColor="@color/colorYellow"
            android:id="@+id/result_name" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginBottom="@dimen/size_20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_5dp"
                android:text="@string/repeat"
                android:textAllCaps="false"
                android:background="@drawable/custom_ripple_effect_5"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="@dimen/size_5dp"
                android:layout_marginEnd="@dimen/size_5dp"
                android:layout_weight="1"
                android:id="@+id/result_button_replay"
                android:textSize="@dimen/textsize_16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_5dp"
                android:text="@string/finish"
                android:textAllCaps="false"
                android:background="@drawable/custom_ripple_effect_4"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="@dimen/size_5dp"
                android:layout_marginEnd="@dimen/size_5dp"
                android:layout_weight="1"
                android:id="@+id/result_button_finish"
                android:textSize="@dimen/textsize_16sp" />
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>